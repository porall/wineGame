.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #F8FAFC;
  padding: 0;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 48rpx;
  background-color: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20rpx);
  position: sticky;
  top: 0;
  z-index: 20;
}

.header-left {
  display: flex;
  flex-direction: column;
}

.greeting-label {
  font-size: 20rpx;
  color: #94A3B8;
  font-weight: 500;
  letter-spacing: 2rpx;
  text-transform: uppercase;
}

.greeting-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #1E293B;
  margin-top: 4rpx;
}

.avatar-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.avatar {
  width: 100%;
  height: 100%;
}

.section-title {
  padding: 48rpx 48rpx 32rpx;
  display: flex;
  align-items: center;
}

.section-title-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #64748B;
}

.deck-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
  padding: 0 48rpx;
}

.deck-item {
  background-color: #FFFFFF;
  padding: 40rpx;
  border-radius: 48rpx;
  box-shadow: 0 20rpx 60rpx -10rpx rgba(0, 0, 0, 0.05), 0 8rpx 20rpx -10rpx rgba(0, 0, 0, 0.02);
  border: 2rpx solid #FFFFFF;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.deck-item:active {
  transform: scale(0.95);
}

.deck-icon-wrapper {
  width: 112rpx;
  height: 112rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.deck-icon {
  font-size: 56rpx;
}

.deck-name {
  font-weight: bold;
  font-size: 30rpx;
  color: #334155;
}

.deck-count {
  font-size: 20rpx;
  color: #94A3B8;
  margin-top: 8rpx;
}

.fab-button {
  position: fixed;
  bottom: 64rpx;
  right: 48rpx;
  width: 112rpx;
  height: 112rpx;
  background: linear-gradient(135deg, #FF6B6B, #FB923C);
  border-radius: 50%;
  box-shadow: 0 16rpx 48rpx rgba(255, 107, 107, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 30;
  transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.fab-button:active {
  transform: scale(0.9);
}

.fab-icon {
  font-size: 56rpx;
  color: #FFFFFF;
  font-weight: 300;
}
