.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #F8FAFC;
}

.form-section {
  flex: 1;
  padding: 32rpx 48rpx;
}

.form-item {
  margin-bottom: 48rpx;
}

.form-label {
  display: block;
  font-size: 22rpx;
  font-weight: bold;
  color: #94A3B8;
  text-transform: uppercase;
  margin-bottom: 16rpx;
  margin-left: 8rpx;
}

.form-input {
  width: 100%;
  height: 112rpx;
  padding: 0 40rpx;
  border-radius: 32rpx;
  background-color: #FFFFFF;
  border: 4rpx solid transparent;
  font-size: 30rpx;
  color: #1E293B;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #FF6B6B;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  padding: 32rpx 40rpx;
  border-radius: 32rpx;
  background-color: #FFFFFF;
  border: 4rpx solid transparent;
  font-size: 30rpx;
  color: #1E293B;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.form-textarea:focus {
  border-color: #FF6B6B;
}

.icon-picker {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 32rpx;
  background-color: #FFFFFF;
  padding: 32rpx;
  border-radius: 48rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  border: 4rpx solid #FFFFFF;
}

.icon-option {
  aspect-ratio: 1;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid transparent;
  transition: all 0.2s ease;
}

.icon-option.selected {
  border-color: #FF6B6B;
  background-color: #FFF0F0 !important;
  transform: scale(1.1);
}

.icon-emoji {
  font-size: 48rpx;
}

.bottom-bar {
  padding: 48rpx;
  background-color: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20rpx);
  border-top: 2rpx solid #F1F5F9;
}

.create-btn {
  width: 100%;
  height: 112rpx;
  border-radius: 32rpx;
  font-weight: bold;
  font-size: 32rpx;
  border: none;
  transition: all 0.3s ease;
}

.create-btn.disabled {
  background-color: #E2E8F0;
  color: #94A3B8;
}

.create-btn.active {
  background: linear-gradient(135deg, #FF6B6B, #FB923C);
  color: #FFFFFF;
  box-shadow: 0 16rpx 48rpx rgba(255, 107, 107, 0.3);
}

.create-btn.active:active {
  transform: scale(0.98);
}
