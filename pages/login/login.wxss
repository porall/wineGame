.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100vh;
  padding: 60rpx 30rpx 30rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 100%);
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.login-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at 20% 30%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
              radial-gradient(circle at 80% 70%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  pointer-events: none;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100rpx;
  position: relative;
  z-index: 1;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.9);
  padding: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  animation: float 6s ease-in-out infinite;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-body {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
}

.login-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #fff;
  color: #ff6b6b;
  font-size: 28rpx;
  margin-bottom: 40rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.login-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 107, 107, 0.1), transparent);
  transition: left 0.6s;
}

.login-btn:hover {
  transform: translateY(-5rpx);
  box-shadow: 0 12rpx 32rpx rgba(255, 107, 107, 0.4);
}

.login-btn:hover::before {
  left: 100%;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.login-text {
  font-size: 28rpx;
  font-weight: 500;
  position: relative;
  z-index: 1;
}

.login-tip {
  text-align: center;
  color: rgba(255, 255, 255, 0.7);
  font-size: 20rpx;
}

.tip-desc {
  font-size: 18rpx;
  opacity: 0.8;
  margin-top: 10rpx;
  display: block;
}

/* 适配不同屏幕尺寸 */
@media (max-width: 375px) {
  .login-container {
    padding: 40rpx 20rpx 20rpx;
  }
  
  .logo {
    width: 140rpx;
    height: 140rpx;
  }
  
  .title {
    font-size: 40rpx;
  }
  
  .login-btn {
    height: 70rpx;
    font-size: 26rpx;
  }
}

/* 加载动画 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  position: relative;
  z-index: 1;
}

.loading::after {
  content: '';
  width: 30rpx;
  height: 30rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  border-top-color: #fff;
  animation: spin 1s ease-in-out infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  50% {
    transform: translateY(-20rpx) scale(1.05);
  }
}