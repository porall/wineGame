<view class="container">
  <!-- 背景装饰 -->
  <view class="background-decoration">
    <view class="circle circle-1"></view>
    <view class="circle circle-2"></view>
    <view class="circle circle-3"></view>
  </view>
  
  <!-- 标题区域 -->
  <view class="header">
    <view class="title-container">
      <view class="title">酒桌游戏</view>
      <view class="subtitle">让聚会更有趣</view>
    </view>
    <view class="user-entry" bindtap="navigateToUser">
      <image class="user-icon" src="/images/user.png" mode="aspectFit"></image>
    </view>
  </view>
  
  <!-- 分类选择 -->
  <view class="category-container">
    <view 
      class="category-item {{selectedCategory === 'statement' ? 'active' : ''}}"
      bindtap="selectCategory"
      data-category="statement"
    >
      <view class="category-icon">💬</view>
      <view class="category-text">陈述类</view>
    </view>
    <view 
      class="category-item {{selectedCategory === 'action' ? 'active' : ''}}"
      bindtap="selectCategory"
      data-category="action"
    >
      <view class="category-icon">🏃</view>
      <view class="category-text">动作类</view>
    </view>
    <view 
      class="category-item {{selectedCategory === 'interaction' ? 'active' : ''}}"
      bindtap="selectCategory"
      data-category="interaction"
    >
      <view class="category-icon">🤝</view>
      <view class="category-text">互动类</view>
    </view>
    <view 
      class="category-item {{selectedCategory === 'hell' ? 'active' : ''}}"
      bindtap="selectCategory"
      data-category="hell"
    >
      <view class="category-icon">🔥</view>
      <view class="category-text">地狱难度</view>
    </view>
  </view>
  
  <!-- 抽卡池 -->
  <view class="card-pool">
    <view class="card-container">
      <view class="card {{isCardVisible ? 'visible' : ''}} {{isCardShaking ? 'shake' : ''}} {{isScrolling ? 'scrolling' : ''}}">
        <view class="card-header">
          <view class="card-corner top-left"></view>
          <view class="card-corner top-right"></view>
        </view>
        <view class="card-content">
          <block>
            <view class="scroll-content">
              <view class="scroll-item top">{{scrollTop}}</view>
              <view class="scroll-item middle">{{scrollMiddle}}</view>
              <view class="scroll-item bottom">{{scrollBottom}}</view>
            </view>
          </block>

        </view>
        <view class="card-footer">
          <view class="card-corner bottom-left"></view>
          <view class="card-corner bottom-right"></view>
        </view>
      </view>
    </view>
  </view>
  
  <!-- 抽卡按钮 -->
  <view class="draw-button" bindtap="drawCard" disabled="{{isDrawing}}">
    <view class="button-inner">
      <text class="button-text">{{isDrawing ? '抽卡中...' : '抽卡'}}</text>
      <view class="button-effect"></view>
    </view>
  </view>
  
  <!-- 底部信息 -->
  <view class="footer">
    <text class="footer-text">© 2026 酒桌游戏</text>
  </view>
</view>