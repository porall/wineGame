.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.background-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  pointer-events: none;
}

.circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 107, 107, 0.1);
  animation: float 6s ease-in-out infinite;
}

.circle-1 {
  width: 300rpx;
  height: 300rpx;
  top: 10%;
  left: -100rpx;
  animation-delay: 0s;
}

.circle-2 {
  width: 200rpx;
  height: 200rpx;
  bottom: 20%;
  right: -80rpx;
  animation-delay: 2s;
}

.circle-3 {
  width: 150rpx;
  height: 150rpx;
  top: 50%;
  right: 10%;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  50% {
    transform: translateY(-20rpx) scale(1.05);
  }
}

/* 标题区域 */
.header {
  text-align: center;
  margin: 60rpx 0 40rpx;
  position: relative;
  z-index: 1;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  font-size: 24rpx;
  color: #666;
  opacity: 0.8;
}

/* 分类选择 */
.category-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-bottom: 80rpx;
  width: 100%;
  max-width: 600rpx;
  position: relative;
  z-index: 1;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 32rpx;
  margin: 15rpx;
  border-radius: 16rpx;
  background-color: #fff;
  border: 1rpx solid #e0e0e0;
  font-size: 22rpx;
  color: #666;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  min-width: 120rpx;
}

.category-item:hover {
  transform: translateY(-5rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.category-item.active {
  background-color: #ff6b6b;
  color: #fff;
  border-color: #ff6b6b;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 107, 0.4);
}

.category-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.category-text {
  font-weight: 500;
}

/* 抽卡池 */
.card-pool {
  width: 100%;
  height: 450rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 80rpx;
  position: relative;
  z-index: 1;
}

.card-container {
  width: 80%;
  height: 100%;
  position: relative;
  perspective: 1200rpx;
}

.card {
  width: 100%;
  height: 100%;
  background-color: #fff;
  border-radius: 24rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  opacity: 0;
  transform: scale(0.8) rotateY(90deg);
  transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #ff6b6b, #ff8e8e, #ff6b6b);
}

.card.visible {
  opacity: 1;
  transform: scale(1) rotateY(0deg);
}

.card.shake {
  animation: shake 0.6s ease-in-out;
}

@keyframes shake {
  0%, 100% {
    transform: translateX(0) rotateY(0deg);
  }
  25% {
    transform: translateX(-20rpx) rotateY(-5deg);
  }
  75% {
    transform: translateX(20rpx) rotateY(5deg);
  }
}

.card-header, .card-footer {
  width: 100%;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}

.card-corner {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: rgba(255, 107, 107, 0.1);
}

.card-content {
  font-size: 36rpx;
  text-align: center;
  padding: 60rpx 20rpx;
  color: #333;
  line-height: 1.6;
  font-weight: 500;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  position: relative;
  width: 100%;
  z-index: 2;
}

/* 滚动效果 */
.scroll-content {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  overflow: hidden;
}

.scroll-item {
  font-size: 36rpx;
  text-align: center;
  padding: 25rpx 0;
  width: 100%;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  opacity: 0.6;
  transition: all 0.3s ease;
}

/* 上中下标签样式 */
.scroll-item.top {
  font-size: 32rpx;
  opacity: 0.4;
}

.scroll-item.middle {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff6b6b;
  opacity: 1;
  transform: scale(1.05);
}

.scroll-item.bottom {
  font-size: 32rpx;
  opacity: 0.4;
}



.card.scrolling {
  box-shadow: 0 16rpx 40rpx rgba(255, 107, 107, 0.25);
}

/* 抽卡按钮 */
.draw-button {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 12rpx 32rpx rgba(255, 107, 107, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  position: relative;
  z-index: 1;
  overflow: hidden;
}

.draw-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s;
}

.draw-button:hover::before {
  left: 100%;
}

.draw-button:active {
  transform: scale(0.95);
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 107, 0.3);
}

.button-inner {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.button-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.button-effect {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(0.8);
    opacity: 0.3;
  }
  50% {
    transform: scale(1);
    opacity: 0;
  }
}

/* 底部信息 */
.footer {
  margin-top: 60rpx;
  margin-bottom: 20rpx;
  position: relative;
  z-index: 1;
}

.footer-text {
  font-size: 20rpx;
  color: #999;
  opacity: 0.8;
}