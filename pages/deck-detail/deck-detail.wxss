.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #F1F5F9;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background-color: #FFFFFF;
}

.header-left {
  display: flex;
  align-items: center;
}

.header-btn {
  font-size: 48rpx;
  color: #64748B;
  padding: 0 16rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1E293B;
  margin-left: 8rpx;
}

.add-card-btn {
  font-size: 28rpx;
  font-weight: bold;
  color: #FF6B6B;
  padding: 16rpx 32rpx;
  background-color: rgba(255, 107, 107, 0.05);
  border-radius: 24rpx;
}

.cards-container {
  flex: 1;
  padding: 32rpx;
  height: calc(100vh - 120rpx);
}

.cards-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.card-item {
  background-color: #FFFFFF;
  min-height: 320rpx;
  border-radius: 48rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #E2E8F0;
  transition: all 0.3s ease;
}

.card-item:active {
  transform: scale(1.05);
}

.card-text {
  font-size: 30rpx;
  font-weight: 500;
  color: #334155;
  line-height: 1.6;
}

.empty-hint {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #94A3B8;
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-mask.visible {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFFFFF;
  border-radius: 80rpx 80rpx 0 0;
  padding: 48rpx;
  z-index: 101;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  box-shadow: 0 -20rpx 60rpx rgba(0, 0, 0, 0.1);
}

.modal-content.visible {
  transform: translateY(0);
}

.modal-handle {
  width: 96rpx;
  height: 12rpx;
  background-color: #E2E8F0;
  border-radius: 6rpx;
  margin: 0 auto 48rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
}

.modal-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1E293B;
}

.modal-close {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F1F5F9;
  border-radius: 50%;
  font-size: 48rpx;
  color: #94A3B8;
}

.modal-body {
  margin-bottom: 64rpx;
}

.input-wrapper {
  position: relative;
}

.card-input {
  width: 100%;
  height: 256rpx;
  padding: 40rpx;
  border-radius: 48rpx;
  background-color: #F8FAFC;
  border: 4rpx solid transparent;
  font-size: 32rpx;
  color: #334155;
  text-align: center;
  line-height: 1.6;
  transition: all 0.3s ease;
}

.card-input:focus {
  border-color: #FF6B6B;
}

.char-count {
  position: absolute;
  bottom: 32rpx;
  right: 40rpx;
  font-size: 22rpx;
  color: #94A3B8;
  font-family: monospace;
}

.modal-footer {
  display: flex;
  gap: 32rpx;
}

.btn-cancel {
  flex: 1;
  height: 112rpx;
  border-radius: 32rpx;
  border: 4rpx solid #E2E8F0;
  font-weight: bold;
  font-size: 32rpx;
  color: #64748B;
  background-color: #FFFFFF;
}

.btn-confirm {
  flex: 1;
  height: 112rpx;
  border-radius: 32rpx;
  font-weight: bold;
  font-size: 32rpx;
  border: none;
}

.btn-confirm.disabled {
  background-color: #E2E8F0;
  color: #94A3B8;
}

.btn-confirm.active {
  background: linear-gradient(135deg, #FF6B6B, #FB923C);
  color: #FFFFFF;
  box-shadow: 0 16rpx 48rpx rgba(255, 107, 107, 0.3);
}
